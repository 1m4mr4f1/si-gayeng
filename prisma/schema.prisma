generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique // Gunakan username/nip untuk admin
  password  String   // Akan di-hash
  nama      String
  createdAt DateTime @default(now())
}

model Mitra {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Akan di-hash
  namaUsaha String
  createdAt DateTime @default(now())
}